<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="32dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_movie_name_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_name_question"
        android:gravity="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie_name_question"
        android:layout_marginTop="8dp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_action_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_cancel"
        android:layout_below="@+id/et_movie_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:onClick="onCancelClicked" />

    <Button
        android:id="@+id/bt_action_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_search"
        android:layout_alignBaseline="@+id/bt_action_cancel"
        android:layout_alignBottom="@+id/bt_action_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onSearchClicked" />

</RelativeLayout>